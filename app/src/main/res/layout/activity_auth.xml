<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthActivity"
    android:background="#27304f"
    >

    <TextView
        android:id="@+id/authText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/inter_bold"
        android:text="Аккаунтқа кіріңіз"
        android:textColor="#fcc603"
        android:textSize="25sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/phoneAuthInput"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Телефон номерін еңгізіңіз"
        android:inputType="phone"
        android:textColor="#ffffff"
        android:textColorHint="#7e7f80" />

    <EditText
        android:id="@+id/passwordAuthInput"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:hint="Құпия сөзді енгізіңіз"
        android:textColor="#ffffff"
        android:textColorHint="#7e7f80" />

    <Button
        android:id="@+id/authButton"
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:backgroundTint="#fcc603"
        android:textStyle="bold"
        android:text="Кіру" />

    <TextView
        android:id="@+id/firstNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Деректер сай келмейді"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/lastNameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Деректер сай келмейді"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/linkRegText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="Аккаунт құру"
        android:textColor="#ffffff" />
</LinearLayout>